{% extends "FOSUserBundle::layout.html.twig" %}

{% block title %}Login - Nolimits Exchange{% endblock %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-page">
                <div class="panel-heading">
                    <h1>Login</h1>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-sm-offset-3">
                            <form action="{{ path("fos_user_security_check") }}" method="post">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                                {% if error %}
                                    <ul id="errors">
                                        <li>{{ error.messageKey|trans(error.messageData, 'security') }}</li>
                                    </ul>
                                {% endif %}

                                <div class="form-group">
                                    <label for="username">{{ 'form.email'|trans }}</label>
                                    <input type="email" class="form-control input-lg" id="username" name="_username" required="required" value="{{ last_username }}" placeholder="Email">
                                </div>

                                <div class="form-group">
                                    <label for="password">{{ 'security.login.password'|trans }}</label>
                                    <input type="password" class="form-control input-lg" id="password" name="_password" placeholder="Password">
                                </div>

                                <div class="form-group">
                                    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary btn-lg btn-block"/>
                                </div>

                                <p>
                                    <span class='text-center'><a href="{{ path('fos_user_resetting_request') }}" class="text-sm">Forgot Password?</a></span>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}
