{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
{{ form_row(form.current_password, { 'attr': {'class': 'input-lg'}}) }}
{{ form_row(form.plainPassword.first, { 'attr': {'class': 'input-lg'}}) }}
{{ form_row(form.plainPassword.second, { 'attr': {'class': 'input-lg'}}) }}
<input type="submit" value="{{ 'change_password.submit'|trans }}" class="btn btn-primary btn-lg btn-block"/>
{{ form_end(form) }}
